<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_purchaseorder_document" inherit_id="purchase.report_purchaseorder_document">
         <xpath expr="//p[@t-field='o.notes']/.." position="after">
          <t t-if="o.signature">
            <div class="col-6">
                <img t-if="o.company_id.signature_image" t-att-src="image_data_uri(o.company_id.signature_image)" style="position:absolute;height:200px; width:300px; opacity: 1;"/>
            </div>
          </t>
        </xpath>
    </template>
</odoo>