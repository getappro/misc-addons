<?xml version="1.0" ?>
<odoo>
    <!-- Mail template are declared in a NOUPDATE block
         so users can freely customize/delete them -->
    <data noupdate="1">
        <!--Email template -->
        <record id="email_template_bank_advice" model="mail.template">
            <field name="name">Bank advice: Send by email</field>
            <field name="model_id" ref="l10n_ma_hr_payroll.model_hr_payroll_advice"/>
            <field name="email_from">${object.user_id.email_formatted |safe}</field>
            <field name="email_to">test@test.com</field>
            <field name="subject">sujet test</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Please find ${object.name} attached with this mail.
                        <br/>
                        <br/>
                        Thank You
                        <br/>
                        <br/>
                        ${object.user_id.company_id.name}
                    </p>
                </div>
            </field>
            <field name="report_template" ref="l10n_ma_hr_payroll.report_payrolladvice"/>
            <field name="report_name">Advice_${(object.name or '')}</field>
            <field name="auto_delete" eval="True"/>
        </record>

    </data>
</odoo>