            <field name="sequence">1510</field>
            <field name="category_id" ref="NOCAT"/>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">
coef = payslip.date_from.month - 1
FP = payslip.sum('TFRPRO', '2023-01-01', '2023-12-31')
result = FRPRO if (FRPRO &lt;=2916.67) else min((((2916.67*coef)-FP)+2916.67), FRPRO) if (2916.67*coef) &gt; FP else 2916.67
