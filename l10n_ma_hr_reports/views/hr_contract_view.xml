<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_contract_inherited_ma_reports" model="ir.ui.view">
            <field name="name">Moroccan Reports</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//group[@name='salary_info']" position="inside">
                        <group name="net_salary">
                            <label for="wage_net"/>
                            <div class="o_row mw-50" name="wage_net">
                                <field name="wage_net" class="oe_inline o_hr_narrow_field" nolabel="1"/>
                                <div class="mb-3">/ mois</div>
                            </div>
                        </group>
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</odoo>