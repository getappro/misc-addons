<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_attest_travail">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <style>
                        .page {
                        font-family: Arial, sans-serif;
                        font-size: 16px;
                        line-height: 20px;
                        margin: 20px;
                        }
                        .container {
                        max-width: 800px;
                        margin: 0 auto;
                        }
                        .header {
                        text-align: center;
                        padding-bottom: 40px;
                        }
                        .content {
                        }
                        .footer {
                        text-align: left;
                        }
                    </style>
                    <div class="page">
                        <div class="container">
                            <h1 class="header">ATTESTATION DE TRAVAIL</h1>
                            <div>
                                <p>Je soussigné(e),<span t-field="o.parent_id"/>, représentant(e) de l'entreprise<span
                                        t-field="o.company_id"/>, atteste que M./Mme
                                    <span t-field="o.name"/>
                                    exerce la fonction de
                                    <span t-field="o.job_id"/>
                                    au sein de notre entreprise depuis le<span t-field="o.contract_id.date_start"/>.
                                </p>
                                <p>La présente attestation est délivrée à la demande de l'intéressé(e) pour servir et
                                    valoir ce que de droit.
                                </p>
                            </div>
                            <div style="text-align: right;">
                                <p>Fait à<span t-field="o.company_id.city"/>, le
                                    <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d')"/>
                                </p>
                                <p>Signature : ____________________________</p>
                                <p>Nom et cachet de l'entreprise :
                                    <span t-field="o.company_id"/>
                                </p>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>